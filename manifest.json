{
	"manifest_version": 3,
	"name": "Non-Adjacent Text Selection",
	"version": "1",
	"description": "Allows copying and searching of non-adjacent text selections.",
	"background": {
    	"scripts": ["background.js"],
    	"persistent": false
  },
  "content_scripts": [
    {
     	"matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
     	"js": ["contentScript.js"]
    }
  ],
  "browser_action": {
          "default_title": "Copy Options",
          "default_popup": "options.html",
          "default_icon": { 
            "16": "images/icon16.png"
          }
  },
  "icons": { "48": "images/icon48.png",
              "128": "images/icon128.png"
  },
  "permissions": ["contextMenus", "tabs", "clipboardWrite", "storage"]
}