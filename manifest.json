{
	"manifest_version": 3,
	"name": "MultiTabSearch",
	"version": "1",
	"description": "Opens multiple search tabs for each line of selected text",
	"background": {
    	"scripts": ["background.js"],
    	"persistent": false
  },
  "content_scripts": [
    {
     	"matches": ["http://*/*", "https://*/*"],
      "run_at": "document_idle",
     	"js": ["contentScript.js"]
    }
  ],
  "browser_action": {
          "default_title": "Copy Options",
          "default_popup": "options.html"
  },
  "permissions": ["contextMenus", "activeTab", "tabs", "clipboardWrite", "storage"]
}